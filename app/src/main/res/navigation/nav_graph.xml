<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/nav_graph"
  app:startDestination="@id/userListFragment">

  <fragment
    android:id="@+id/userListFragment"
    android:name="cvdevelopers.takehome.ui.userlist.UserListFragment"
    android:label="user_list_fragment"
    tools:layout="@layout/user_list_fragment">
    <action
      android:id="@+id/action_userListFragment_to_userDetailsFragment"
      app:destination="@id/userDetailsFragment"
      app:popUpTo="@id/userListFragment" />
  </fragment>
  <fragment
    android:id="@+id/userDetailsFragment"
    android:name="cvdevelopers.takehome.ui.userdetails.UserDetailsFragment"
    android:label="user_details_fragment"
    tools:layout="@layout/user_details_fragment" >
    <argument
      android:name="userEmail"
      app:argType="string" />

  </fragment>
</navigation>